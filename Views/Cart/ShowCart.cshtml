
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowFoodInCategory</title>
    <link href="~/Content/showFoodStyle/ShowFoodInCategory.css" rel="stylesheet" />
    <script src="~/Content/showFoodStyle/JavaScript.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        
        <div id="products" class="row list-group">
            @foreach (var item in ViewBag.foodItemOrdered)
            {
                <div class="item  col-xs-4 col-lg-4">
                    <div class="thumbnail">
                        <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
                        <div class="caption">
                            <h4 class="group inner list-group-item-heading">
                                @item.name
                            </h4>
                            <p class="group inner list-group-item-text">
                                preparing time: @item.preparing_time
                                <br />
                                description: @item.description
                            </p>
                            <div class="row">
                                <div class="col-xs-12 col-md-6">
                                    <p class="lead">
                                        Price @item.price$
                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <p class="lead">
                        Total Payment: @ViewBag.totalprice $
                    </p>
                </div>
            </div>
        </div>
        @Html.ActionLink("Procedure your orders", "SaveCartToDataBase", "Cart",new { @class = "btn btn-info" })
    </div>

</body>
</html>